 <div class="content">

 <% if notice %>
  <div class="alert alert-success">
    <h4 class="alert-heading">Success!</h4>
    <%= notice %>
  </div>
<%end%>

		<h1><%= @board.title %><%= link_to 'Edit', edit_project_board_path(@board)  %></h1>


		<div id="backlog">


				<h2>Backlog</h2>

				<div id="accordion">

					<% @board.stories.each do |story| %>
	
					

					
					<h3><a href="#"><%= story.title %></a><br>
					
 					<%= link_to '', story, confirm: 'Are you sure?', method: :delete, :class => 'icon icon-trash' %>

					<span class="cleaner"></span>
					</h3>

					

					<div>

						<ul id="sortable">

							
							<p><%= story.description %></p> 
							<%= link_to '', edit_story_path(story), confirm: 'You want to edit it?', :class => 'icon icon-pencil right' %>

							<span class="cleaner"></span><br>
							<% @orderedTasks = story.tasks.order(:weight) %>
							<% @orderedTasks.each do |task| %>
							<li class="postit schatten ui-state-default">

								<p class="right">
								 	 <h4 class="right"><%= task.weight %></h4>
								</p>

								<p>
								  	<h4><%= link_to task.title , story_task_path(story, task) %></h4>
								</p>
								<div class="cleaner"></div>
							</li>

							<% end %>

							<p><%= link_to 'add Task', new_board_story_task_path(story.board, story) %></p>

						</ul>

					</div>

					<% end %>
					<div class="cleaner"></div>

				</div>

				<p><%= link_to 'add Story', new_board_story_path(@board) %></p>

		</div>
				
			<div class="scroll-pane ui-widget ui-widget-header ui-corner-all">
				<div class="scroll-content">	
					<div class="board">

	
						<ul class="sortable sortable-columns">
							<!-- show all existing columns of these board -->
							<% @board.columns.each do |column| %>

									<li class="ui-state-default">
										<!-- show all existing stories in this board -->

										<% @column = column %>
										<%= render :partial => "columns/show", :object => @column %>
										<div class="cleaner"></div>
									</li>

							<% end %>
						</ul>

					<div class="cleaner"></div>

					</div> <!-- end board -->
				</div><!-- end scroll-content -->

				<div class="scroll-bar-wrap ui-widget-content ui-corner-bottom">
					<div class="scroll-bar"></div>
				</div> <!-- end scroll-bar-wrap -->

			</div> <!-- end scroll-pane -->

<% if  @project.user.name==current_user.name %> <%= link_to 'New Column', new_board_column_path(@board) %><% end %>

</div>



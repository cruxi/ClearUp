 <div class="content">

 	<% if notice %>
  <div class="alert alert-success">
    <h4 class="alert-heading">Success!</h4>
    <%= notice %>
  </div>
<%end%>

<p>
<% if @project.sprints.exists? %>
  <% @currentSprint=@project.sprints.last %>
    <% if (@currentSprint.start_date<DateTime.now)  %>
      Current sprints ends in <%= distance_of_time_in_words_to_now(@currentSprint.end_date) %>
    <% else %> 
      Sprint has not started yet 
    <% end %>
<% else %>
  No sprint started
<% end %>

</p>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Deadline</th>
    <th>Project Owner</th>
    <th></th>
    <th></th>
  </tr>


  <tr>
    <td><%= @project.title %></td>
    <td><%= @project.description %></td>
    <td><%= @project.deadline %></td>
    <td><%= @project.user.name %></td>
    <td><%= link_to 'Show Boards', project_boards_path(@project) %></td>
    <td><% if  @project.user.name==current_user.name %> <%= link_to 'New Board', new_project_board_path(@project) %><% end %></td>
  </tr>
</table>

<br />
</div>

<% if  @project.user.name==current_user.name %> <%= link_to 'Start Sprint', new_project_sprint_path(@project) %><% end %> |
<%= link_to 'Show all sprints for project', project_sprints_path(@project) %>
<br />

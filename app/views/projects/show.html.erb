 <div class="content">

 	<% if notice %>
  <div class="alert alert-success">
    <h4 class="alert-heading">Success!</h4>
    <%= notice %>
  </div>
<%end%>

<p>
<% @currentSprint=@project.sprints.last %>
<% if defined? @currentSprint.end_date && (@currentSprint.end_date<DateTime.now) %>
 Current sprints ends in <%= distance_of_time_in_words_to_now(@currentSprint.end_date) %>
<% end %>
</p>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Deadline</th>
    <th>Project Owner</th>
    <th></th>
    <th></th>
  </tr>


  <tr>
    <td><%= @project.title %></td>
    <td><%= @project.description %></td>
    <td><%= @project.deadline %></td>
    <td><%= @project.user.name %></td>
    <td><%= link_to 'Show Boards', project_boards_path(@project) %></td>
    <td><% if  @project.user.name==current_user.name %> <%= link_to 'New Board', new_project_board_path(@project) %><% end %></td>
  </tr>
</table>

<br />
</div>


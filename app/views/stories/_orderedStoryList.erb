

<ul class="sortable">

		
		<% @orderedStories = @column.stories.order(:priority).reverse %>
		
		<% @orderedStories.each do |story| %>
			
			<div class="portlet">
				<div class="portlet-header">
					<p class="right">
					  <h4 class="right"><%= story.priority %></h4>

					  <%= button_to "+", {:controller => :stories,
					      :action => 'moveup', :id => story.id }, :method => :moveup, :class => 'btn right' %>

					  <%= button_to "-", {:controller => :stories,
					      :action => 'movedown', :id => story.id }, :method => :moveup, :class => 'btn right' %>
					</p>

					<p>
					  <h4><%= story.title %></h4>
					</p>
				</div>

				<div class="portlet-content">

					<div class="cleaner"></div>

					<p><%= story.description %></p>

					<p>
						<%= link_to 'Show', story %>
					 	<%= link_to 'Edit', edit_story_path(story) %>
					 	<%= link_to 'Destroy', story, confirm: 'Are you sure?', method: :delete %>
					</p>

				</div>
			</div>

			<div class="cleaner"></div>
			
		<% end %>

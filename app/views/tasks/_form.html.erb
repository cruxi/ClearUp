<%= form_for([@story, @task]) do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
  <%= f.label :story_id %><br />
  <% @board = Board.find(params[:board_id]) %>
  <% stories_array = @board.stories.all.map { |story| [story.title, story.id] } %>
  <%= f.select :story_id, options_for_select(stories_array), :class => 'genForm_dropBox' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <div class="field">

<% end %>

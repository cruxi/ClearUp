

<ul class="sortable">
		<% @orderedTasks = @column.tasks.order(:weight).reverse %>
		
		<% @orderedTasks.each do |task| %>
			<li class="postit schatten ui-state-default"><span class="ui-icon ui-icon-arrowthick-2-n-s"></span>

			<p class="right">
			  <h4 class="right"><%= task.weight %></h4>

			  <%= button_to "+", {:controller => :tasks,
			      :action => 'moveup', :id => task.id }, :method => :moveup, :class => 'btn right' %>

			  <%= button_to "-", {:controller => :tasks,
			      :action => 'movedown', :id => task.id }, :method => :moveup, :class => 'btn right' %>
			</p>

			<p>
			  <h4><%= task.title %></h4>
			</p>


			<div class="cleaner"></div>


			<p><%= task.description %></p>

			<p>
			<%= link_to 'Show', task %>
			 <%= link_to 'Edit', edit_task_path(task) %>
			 <%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %>
			</p>


			<div class="cleaner"></div>

			</li>
		<% end %>

	</ul>
